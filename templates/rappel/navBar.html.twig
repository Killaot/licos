{% extends 'base.html.twig' %}

{% block title %}navBar{% endblock %}

{% block body %}
    <style>

        body, h1, h2, h3, h4, h5, h6, ul, li {
            margin: 0;
            padding: 0;
        }

        .navbar {
            width: 100%;
            height: 125px;
            background: #11116C;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .navbar ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
        }

        .navbar li {
            margin-right: 150px;
        }

        .navbar li a {
            color: #D6D6D5;
            text-align: center;
            font-family: Inter;
            font-size: 50px;
            font-style: normal;
            font-weight: 700;
            line-height: normal;
            text-decoration: none;
        }

        .navbar li:first-child a {
            display: flex;
            align-items: center;
        }

        .navbar li:first-child a img {
            margin-right: 10px;
            max-width: 30px;
        }

        .navbar li:last-child a {
            background: #103A94;
            box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 0.63);
            padding: 10px 30px; 
            border-radius: 0px; 
        }
        
    </style>
    
    <nav>
        <ul class="navbar">
            {% if not app.user %}
                <li>
                    <a href="{{ path('app_home') }}">
                        <img src="../../assets/images/logo.png" alt="Logo">
                        Licos
                    </a>
                </li>
                <li><a href="#">Contactez nous</a></li>
                <li><a href="{{ path('app_register') }}">Inscription</a></li>
                <li><a href="{{ path('app_login') }}">Connexion</a></li>
            {% endif %}
                    
                    {# Lien pour l'utilisateur connecté #}
            {% if app.user %}
                <li>
                    <a href="{{ path('app_home') }}">
                        <img src="../../assets/images/logo.png" alt="Logo">
                        Licos
                    </a>
                </li>
                <li><a href="{{ path('app_consult') }}">Vos colis</a></li>
                <li><a href="#">Contactez nous</a></li>
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                <li><a href="{{ path('app_user_show', {'id': app.user.id}) }}" >Profil</a></li>
            {% endif %}            
        </ul>
    </nav>
{% endblock %}