{% extends 'base.html.twig' %}

{% block title %}envoieColis{% endblock %}

{% block body %}

    <style>
        .custom-background {
            width: 1008px;
            height: 900px;
            background: #0E62BB;
            margin: 50px auto;
        }

        .text-block {
            display: flex;
            width: 550px;
            flex-direction: column;
            justify-content: center;
            color: #D6D6D5;
            text-align: center;
            font-family: Inter;
            font-size: 44px;
            font-style: normal;
            font-weight: 700;
            line-height: normal;
            margin: 20px auto;
        }

        .envoyerBouton {
            width: 458px;
            height: 139px;
            border: 3px solid #000;
            background: #0E62BB;
            box-shadow: 8px 8px 4px 0px rgba(0, 0, 0, 0.25);
            color: #D6D6D5;
            text-align: center;
            font-family: Inter;
            font-size: 44px;
            font-style: normal;
            font-weight: 700;
            line-height: 139px; /* Ajuste la hauteur de ligne pour centrer verticalement le texte */
            margin: 20px auto; /* Centre le bouton horizontalement */
            display: flex;
            align-items: center; /* Centre verticalement le contenu */
            justify-content: center; /* Centre horizontalement le contenu */
        }

        .laMap {
            border: 3px solid #000;
            box-shadow: 8px 8px 10px 0px rgba(0, 0, 0, 0.25);
            margin: auto;
            width: 61.65%;
        }

        select {
            width: 600px;
            height: 100px;
            border: 3px solid #000;
            background: #0E62BB;
            box-shadow: 8px 8px 4px 0px rgba(0, 0, 0, 0.25);
            color: #D6D6D5;
            text-align: center;
            font-family: Inter;
            font-size: 44px;
            font-style: normal;
            font-weight: 700;
            line-height: 139px; /* Ajuste la hauteur de ligne pour centrer verticalement le texte */
            margin: 20px auto; /* Centre le bouton horizontalement */
            display: flex;
            align-items: center; /* Centre verticalement le contenu */
            justify-content: center;
        }
    </style>

    <form id="pointRelaisForm" action="{{ path('traitement_Point_Relais') }}" method="post">
        <div class="custom-background">
            <div class="text-block">
                Choisissez un point relais :
            </div>
            <div class="laMap">
                {% include 'rappel/trouverRelais.html.twig' %}
            </div>
            

            {% if lesRelais is defined and lesRelais is not empty %}
                <select name="relais">
                    {% for unRelais in lesRelais %}
                        <option value="{{ unRelais.id }}">{{ unRelais.nom }}</option>
                    {% endfor %}
                </select>
            {% else %}
                <p>Aucun relais disponible.</p>
            {% endif %}

            <input type="hidden" name="relaisId" id="relaisId" value="">            

            <input type="submit" value="Confirmer" class="envoyerBouton">
        </div>
    </form>


{% endblock %}