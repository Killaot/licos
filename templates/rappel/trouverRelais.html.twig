{% extends 'base.html.twig' %}

{% block title %}Map{% endblock %}

{% block body %}

    <div id="map" style="height: 491px; width: 617px;"></div>

    {% set addressCoordinates = [] %}

    {% if lesRelais is defined and lesRelais is not empty %}
        {% for unRelais in lesRelais %}
            {% set coordinates = {
                'address': unRelais.address,
                'nom': unRelais.nom,
                'lat': unRelais.lat, 
                'lng': unRelais.lgn,
            } %}
            {% set addressCoordinates = addressCoordinates|merge([coordinates]) %}
        {% endfor %}
    {% endif %}

    {% if addressCoordinates is defined %}
        <script>
            function initMap() {
                const mapElement = document.getElementById('map');

                const map = new google.maps.Map(mapElement, {
                    center: { lat: 48.733, lng: -3.459 }, // Coordonn√©es pour centrer la carte
                    zoom: 15 // Niveau de zoom initial
                });

                const nomPointRelaisInput = document.getElementById('nomPointRelais');
                const adressePointRelaisInput = document.getElementById('adressePointRelais');

                // Ajouter des marqueurs pour chaque adresse
                {% for address in addressCoordinates %}
                    marker = new google.maps.Marker({
                        position: { lat: {{ address.lat }}, lng: {{ address.lng }} },
                        map: map,
                        title: "{{ address.address }}"
                    });
                    marker.addListener('click', function() {
                        const infowindow = new google.maps.InfoWindow({
                            content: "<strong>{{ address.nom }}</strong><br>{{ address.address }}"
                        });
                        infowindow.open(map, this);
                        nomPointRelaisInput.value = "{{ address.nom }}";
                        adressePointRelaisInput.value = "{{ address.address }}";
                    });

                {% endfor %}
                // Fonction pour soumettre le formulaire quand l'utilisateur clique sur le bouton "Confirmer"
                const confirmerButton = document.querySelector('.envoyerBouton');
                confirmerButton.addEventListener('click', function() {
                    document.getElementById('pointRelaisForm').submit();
                });
            }

        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCTE3uCCa1cKf5uQ7KCRRg7IwlcQxFmKe4&callback=initMap" async defer></script>
    {% endif %}
{% endblock %}