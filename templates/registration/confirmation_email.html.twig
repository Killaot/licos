{% extends 'base.html.twig' %}

{% block title %}Confirm Email{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Hi! Please confirm your email!</h1>

                        <p class="card-text">
                            Please confirm your email address by clicking the following link: <br><br>
                            <a href="{{ signedUrl|raw }}" class="btn btn-primary">Confirm my Email</a>.
                            This link will expire in {{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}.
                        </p>

                        <p class="card-text">
                            Cheers!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
