{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        .custom-background {
            width: 1008px;
            height: 873px;
            background: #0E62BB;
            margin: 50px auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .text-block {
            width: 900px;
            color: #D6D6D5;
            text-align: left;
            font-family: Inter;
            font-size: 44px;
            font-style: normal;
            font-weight: 700;
            line-height: normal;
            margin: 20px auto;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-label {
            display: inline-block;
            width: 400px; /* Ajustez la largeur pour aligner les étiquettes */
            text-align: left; /* Aligne le texte des étiquettes à gauche */
            margin-bottom: 10px; /* Espacement entre les étiquettes */
        }

        .form-control {
            display: inline-block;
            width: 400px; /* Ajustez la largeur pour les champs d'entrée */
            padding: 10px;
            margin-bottom: 20px; /* Espacement entre les champs d'entrée */
            font-size: 16px; /* Taille de police des champs d'entrée */
            border: 1px solid #ccc; /* Bordure des champs d'entrée */
            border-radius: 5px; /* Coins arrondis pour les champs d'entrée */
            background-color: #f8f8f8; /* Couleur de fond des champs d'entrée */
        }

        .envoyerBouton {
            width: 458px;
            height: 139px;
            border: 3px solid #000;
            background: #0E62BB;
            box-shadow: 8px 8px 4px 0px rgba(0, 0, 0, 0.25);
            color: #D6D6D5;
            text-align: center;
            font-family: Inter;
            font-size: 44px;
            font-style: normal;
            font-weight: 700;
            line-height: 139px; /* Ajuste la hauteur de ligne pour centrer verticalement le texte */
            margin: 20px auto; /* Centre le bouton horizontalement */
            display: flex;
            align-items: center; /* Centre verticalement le contenu */
            justify-content: center; /* Centre horizontalement le contenu */
            text-decoration: none; /* Supprime le soulignement du bouton */
        }
    </style>

    {% block navBar %}
        {% include 'rappel/navBar.html.twig' %}
    {% endblock %}

    <div class="custom-background">
        <div class="text-block">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                {# Appliquer la classe CSS pour le label #}
                {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {# Appliquer la classe CSS pour l'input et le placeholder #}
                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}

                {# Répéter le même schéma pour les autres champs #}
                {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}

                {{ form_label(registrationForm.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}

                {{ form_label(registrationForm.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}

                {{ form_label(registrationForm.idVille, 'City', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.idVille, {'attr': {'class': 'form-control'}}) }}

                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}

                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}

                <div class="form-group form-check">
                    {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', {'label_attr': {'class': 'form-check-label'}}) }}
                </div>

                <button type="submit" class="envoyerBouton">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>

    {% block footer %}
        {% include 'rappel/footer.html.twig' %}
    {% endblock %}
{% endblock %}
