{% extends 'base.html.twig' %}


{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <p>faire un bouton qui renvoie vers le lien user/id s'il est connecté, sinon il renvoie vers la page de connexion</p>
                    
                    {# Liens pour les utilisateurs non connectés #}
                    {% if not app.user %}
                        <a href="{{ path('app_register') }}" class="btn btn-primary">Inscription</a>
                        <a href="{{ path('app_login') }}" class="btn btn-success">Connexion</a>
                        <a href="{{ path('app_forgot_password_request') }}" class="btn btn-warning">Mdp reset</a>
                    {% endif %}
                    
                    {# Lien pour l'utilisateur connecté #}
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>
                        <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="btn btn-danger">Profil</a>
                    {% endif %}

                    <h1 class="mt-4">Bienvenue</h1>
                    <h2>Test</h2>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
