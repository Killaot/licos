{% extends 'base.html.twig' %}

{% block title %}Password Reset{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Hi!</h1>

                        <p class="card-text">To reset your password, please visit the following link:</p>

                        <a href="{{ url('app_reset_password', {token: resetToken.token}) }}" class="btn btn-primary">{{ url('app_reset_password', {token: resetToken.token}) }}</a>

                        <p class="card-text">This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.</p>

                        <p class="card-text">Cheers!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
